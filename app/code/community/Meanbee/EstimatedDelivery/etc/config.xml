                <dispatch_date>
                    <to_order>*</to_order>
                </dispatch_date>
            </sales_convert_quote>
        </fieldsets>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <meanbee_estimateddelivery before="Mage_Adminhtml">Meanbee_EstimatedDelivery</meanbee_estimateddelivery>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <meanbee_estimateddelivery>
                    <file>meanbee/estimated_delivery.xml</file>
                </meanbee_estimateddelivery>
            </updates>
        </layout>
        <menu>
            <catalog>
                <children>
                    <meanbee_estimateddelivery translate="title">
                        <title>Manage Estimated Delivery Dates</title>
                        <action>adminhtml/estimateddelivery/index</action>
                        <sort_order>101</sort_order>
                    </meanbee_estimateddelivery>
                </children>
            </catalog>
        </menu>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <meanbee_estimateddelivery>
                    <file>meanbee/estimated_delivery.xml</file>
                </meanbee_estimateddelivery>
            </updates>
        </layout>
    </frontend>
    <phpunit>
        <suite>
            <modules>
                <Meanbee_EstimatedDelivery/>
            </modules>
        </suite>
    </phpunit>
